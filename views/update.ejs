<!DOCTYPE html>
<html>
<head>
  <title>Update Student</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<h1>Update Student</h1>

<form action="/updateStudent/<%= student.roll %>" method="post">

  <label>Name:</label>
  <input type="text" name="name" value="<%= student.name %>" required>

  <label>Guardian Phone (optional):</label>
  <input type="text" name="guardianPhone" pattern="[0-9]{10}" value="<%= student.guardianPhone %>">

  <label>Skills:</label><br>

  <% const skillSet = [
    "dance","drawing","painting","singing","storyWriting",
    "chess","cricket","soccer","orchestra"
  ]; %>

  <% skillSet.forEach(s => { %>
    <label>
      <input type="checkbox" name="skills"
        value="<%= s %>"
        <%= student.skills.includes(s) ? "checked" : "" %>>
      <%= s %>
    </label>
    <br>
  <% }) %>

  <br>
  <button>Update</button>
</form>

<br>
<a href="/">Home</a>

</body>
</html>
